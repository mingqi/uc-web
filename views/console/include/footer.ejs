<!-- please wait dialog -->
<div class="modal" id="pleaseWaitDialog" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">正在处理...</h4>
      </div>
      <div class="modal-body">
        <div class="progress progress-striped active">
          <div class="progress-bar" role="progressbar"
              aria-valuemin="0" aria-valuemax="100" style="width: 100%">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
var ma = window.ma || {};
(function() {
  var $modal = $('#pleaseWaitDialog');
  
  $modal
    .on('shown.bs.modal', function () { $modal.addClass('fade') })
    .on('hidden.bs.modal', function () { $modal.removeClass('fade') })
  _.extend(ma, {
    wait: function() {
      $modal.modal();
    },
    done: function() {
      $modal.modal('hide');
    }
  });
})();
</script>
